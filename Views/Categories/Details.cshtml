@model CinemaModel.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MovieGenre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MovieGenre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movies)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Titlu</th>
                    <th>Regizor</th>
                    <th>Studioul</th>
                    <th>DataLansarii</th>
                </tr>
                @foreach (var item in Model.Movies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FilmDirector)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Studio.StudioName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReleaseDate)
                        </td>
                    </tr>
                }
            </table>
        </dd>

        @*<dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieGenre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieGenre)
        </dd>*@

    </dl>
</div>
